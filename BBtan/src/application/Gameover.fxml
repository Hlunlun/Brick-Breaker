<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane stylesheets="@gameover.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.GameoverController">
   <children>
      <AnchorPane layoutX="-2.0" prefHeight="600.0" prefWidth="600.0">
         <children>
            <Label layoutX="148.0" layoutY="305.0" text="Your score is">
               <font>
                  <Font name="Showcard Gothic" size="30.0" />
               </font></Label>
            <Label fx:id="score" layoutX="398.0" layoutY="297.0" text="0">
               <font>
                  <Font size="40.0" />
               </font></Label>
            <Button fx:id="menuBtn" layoutX="138.0" layoutY="416.0" mnemonicParsing="false" onAction="#goMenu" text="Menu">
               <font>
                  <Font size="24.0" />
               </font></Button>
            <Button fx:id="againBtn" layoutX="322.0" layoutY="416.0" mnemonicParsing="false" onAction="#again" text="Play Again">
               <font>
                  <Font size="24.0" />
               </font></Button>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
